<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bluebg">



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/dark" />


    <TextView
        android:id="@+id/owedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="Owed Balance"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/outstandingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:text="Outstanding Balance"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <Button
        android:id="@+id/owedBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owedTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/holo_green_light"
        android:background="@android:color/transparent"
        android:textSize="36sp" />

    <Button
        android:id="@+id/outstandingBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outstandingTitle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/transparent"
        android:textSize="36sp" />

    <Button
        android:id="@+id/payDebts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outstandingBalance"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="Pay off Debts" />

    <Button
        android:id="@+id/loans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="21dp"
        android:background="#3F51B5"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Loans" />

    <Button
        android:id="@+id/gosearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loans"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="7dp"
        android:textColor="@color/white"
        android:background="#33DCF1"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Search" />

    <Button
        android:id="@+id/logOut1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gosearch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="7dp"
        android:background="#2196F3"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Log Out" />

    <Button
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logOut1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="7dp"
        android:background="#17A42B"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:text="History of Loans" />

</RelativeLayout>